    <header id="header">
      <h1 class="header-title">WithApp</h1>
    </header>
    <div id="main">
      <%= yield %>
    </div>
    <footer id="footer">
      <p class="all-rights-text">Copyrights &copy; 2022 WithApp All Rights Reserved. </p>
    </footer>
  </body>
</html>
